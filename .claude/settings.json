{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "includeCoAuthoredBy": false,

  "permissions": {
    "allow": [
      "Read(bin/pocket-build.py)",
      "Bash(poetry*)",
      "Bash(pytest*)",
      "Bash(mypy*)",
      "Bash(ruff*)",
      "Bash(python*)",
      "Bash(git*)",
      "Bash(git push*)",
      "Bash(git fetch origin)",
      "Bash(chmod*)",
      "Bash(gh pr view*)",
      "Bash(gh pr checks*)",
      "Bash(gh run view*)",
      "Bash(gh pr comment*)",
    ]
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(**/*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$TOOL_RESULT_file_path\" && ruff check \"$TOOL_RESULT_file_path\" --fix || true"
          }
        ]
      },
      {
        "matcher": "Edit(**/*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$TOOL_RESULT_file_path\" && ruff check \"$TOOL_RESULT_file_path\" --fix || true"
          }
        ]
      }
    ]
  }
}
